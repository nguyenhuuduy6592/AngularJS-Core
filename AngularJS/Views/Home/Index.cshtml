@model AngularJSCore.ViewModels.QueryResult
@using Newtonsoft.Json;

@{
    ViewData["Title"] = "Custom Query";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "customQuery" }))
{
    <div class="form-group">
        <label for="Query" class="control-label"></label>
        @Html.TextAreaFor(m => m.Query, new { @class = "form-control" })
        <span for="Query" class="text-danger">@ViewBag.ErrorMessage</span>
    </div>
    <div class="form-inline">
        <div class="form-group">
            <label for="PageSize" class="control-label"></label>
            <select class="form-control" name="PageSize" id="PageSize">
                <option>10</option>
                <option>50</option>
                <option>100</option>
            </select>
            <span for="PageSize" class="text-danger">@ViewBag.ErrorMessage</span>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
}

<div id="dataModel" class="m-t-10"></div>

@section Scripts {
    <script type="text/javascript">
        var dataModel = @Html.Raw(JsonConvert.SerializeObject(Model.Addresses));
        window.generateDynamicTable(dataModel);
    </script>
}